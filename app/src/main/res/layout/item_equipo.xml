<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/cham"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/txNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del equipo"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/txLiga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liga del equipo"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/txNombre"/>

        <TextView
            android:id="@+id/txEstadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estadio del equipo"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_below="@id/txLiga"/>

</RelativeLayout>